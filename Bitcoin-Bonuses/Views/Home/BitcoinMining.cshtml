@model Bitcoin_Bonuses.Models.BitcoinTradingDB
@{
    ViewBag.Title = "Bitcoin Mining Bonuses";
}

<div class="tablewrap">
    <div class="boxHeader">@ViewBag.Title</div>
    <div class="tablewrapInternal">
        <table class="bonus">
            <thead class="bonus">
                <tr>
                    <th>Country</th>
                    <th>Site Banner</th>
                    <th>Site</th>
                    <th>Bonus</th>
                    <th>Claim Now</th>
                    <th>More Info</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Bitcoin)
                {
                    if (item.BonusType == "Mining")
                    {
                        string row = "even";
                        if ((item.RowID) % 2 == 1)
                        {
                            row = "odd";
                        }
                    <tr class="@row">
                        <td>
                            <img src="@item.FlagIcon" alt="@item.FlagIconAlt" width="40" height="20"/>
                        </td>
                        <td>
                            <img src="@item.Image"alt="@item.ImageAlt"/>
                        </td>
                        <td>
                            <a href="@item.ClaimNowURL" target="_blank">@item.BonusName</a>
                        </td>
                        <td>
                            @item.BonusAmt @item.MoreInfo
                        </td>
                        <td>
                            <a href="@item.ClaimNowURL" class="claimMe" target="_blank">Claim Now!</a>
                        </td>
                        <td>
                            @Html.ActionLink("More Info", "_FeaturedDisplayPartial", new { id = item.Id }, new { @class = "moreInfo" })
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div class="contentbox">
    <div class="boxHeader">What is Bitcoin Mining?</div>
    <div class="contentboxInternal">
        <p>
            Bitcoin Mining is a term used when a company uses your computer's resources to do data processing over the internet. In return you get Bitcoins! There are various ways to 
            start Bitcoin Mining, but listed here are sources to help you get started! Some have referral programs to encourage inviting others to start mining!
        </p>
    </div>
</div>

